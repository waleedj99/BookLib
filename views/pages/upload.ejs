<html>
    <body>
        <form action = "/upload" method="POST" enctype="multipart/form-data">
            Sem:<br> 
            <select name = "semester">
                <option  value="1">I</option>
                <option  value="2">II</option>
                <option  value="3">III</option>
                <option  value="4">IV</option>
            </select>
            <br>
            Subject:<br>
            
            <input list="subjects" name="subject" placeholder="Enter Subject" autocomplete="off">
            <datalist id="subjects">
                <option value="Mathematics 4">
                <option value="Microprocessors">
                <option value="Operating System">
                <option value="Linux system programing">
                <option value="Algorithm Design">
            </datalist>
            <br>
            <input type="radio" name="category" value="textbook"> Textbook<br>
            <input type="radio" name="category" value="notes"> Notes<br>
            <input type="file" name="myFile" id = "myFile"><br>
            <input type = "submit" value=" Upload "></input>
        </form>
        
    </body>
</html>