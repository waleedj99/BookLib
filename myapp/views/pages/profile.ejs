</body>
  <script>
    function toggleView(value){
      console.log(value)
      if (value==true) {
        document.getElementById("type-0").style.display = "block"
        document.getElementById("type-1").style.display = "none"
        document.getElementById("name-label").innerHTML = 'Saved Files'
      } else {
        document.getElementById("type-1").style.display = "block"
        document.getElementById("type-0").style.display = "none"
        document.getElementById("name-label").innerHTML = 'Uploaded Files'
      }
    }
   

        <% for (var i = 0; i < 2; i++) {%>  
          var tr = document.createElement('div')
      tr.className = "container"
      tr.id = "type-" + <%=i %>
      var tab = document.getElementById("table")
      tab.appendChild(tr)
        <%}%>
          for (var j = 0; j < Math.ceil(<%=locals.sbooks.length %> / 3); j++) {
            var rowDiv = document.createElement('div')
            rowDiv.className = "row"
            rowDiv.id = "row-s-" + j
            containerDiv = document.getElementById("type-0")
                containerDiv.appendChild(rowDiv)
        }
    for (var j = 0; j < Math.ceil(<%=locals.ubooks.length %> / 3); j++) {
          var rowDiv = document.createElement('div')
          rowDiv.className = "row"
          rowDiv.id = "row-u-" + j
          containerDiv = document.getElementById("type-1")
              containerDiv.appendChild(rowDiv)
       }
       <%locals.sbooks.forEach((tb,index) => {%>
         var cln = document.createElement('div')
         cln.className = "col-4"
         cln.innerHTML = `
            <div class = "card">
    
        <div class="card-body">
          <h5 class="card-title"><%= tb.filename.substring(0,27) %></h5>
            <p class="card-text"><%= tb.subject %></p>
            <div class="row">
            <form action="http://localhost:3000/pdf/<%= tb.filename %>" class="book col" method="GET">
            <button type="submit" value='a' class = "btn btn-secondary" >OPEN </button>
            </form>
            <form class ="col" action="/unsave/<%= tb.filename %>/textbook" method="POST">
            <button type="submit" value='save' class = "btn btn-secondary" >UNSAVE </button>
            </form>
            </div>
        </div>
            `
        document.getElementById('row-s-'+Math.floor(<%=index%>/3)).appendChild(cln)

      <% }); %>

      <% locals.ubooks.forEach((tb, index) => {%>
         var cln = document.createElement('div')
        cln.className = "col-4"
        cln.innerHTML = `
      <div class = "card">
        <div class="card-body">
          <h5 class="card-title"><%= tb.filename.substring(0,27) %></h5>
            <p class="card-text"><%= tb.subject %></p>
            <div class="row">
            <form action="http://localhost:3000/pdf/<%= tb.filename %>" class="book col" method="GET">
            <button type="submit" value='a' class = "btn btn-secondary" >OPEN </button>
            </form>
            </div>
        </div>
            `
        document.getElementById('row-u-' + Math.floor(<%=index %> /3)).appendChild(cln)

          <% }); %>
         console.log(document.getElementById("customSwitches").checked)
          toggleView(document.getElementById("customSwitches").checked)
  </script>
